# =====================================================
# Procurement Chain Data Analyzer - Environment Variables
# =====================================================

# Supabase Configuration
VITE_SUPABASE_URL=your_supabase_project_url
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key

# Optional: Service Role Key (for server-side operations only)
# NEVER expose this in client-side code
# SUPABASE_SERVICE_ROLE_KEY=your_service_role_key

# Better Auth Configuration
# VITE_BETTER_AUTH_SECRET=your_better_auth_secret_key
VITE_API_URL=http://localhost:5000/api

# Social Authentication (Optional)
VITE_GOOGLE_CLIENT_ID=your_google_client_id
VITE_GOOGLE_CLIENT_SECRET=your_google_client_secret
VITE_GITHUB_CLIENT_ID=your_github_client_id
VITE_GITHUB_CLIENT_SECRET=your_github_client_secret

# Application Configuration
VITE_APP_NAME="Procurement Chain Data Analyzer"
VITE_APP_VERSION="1.0.0"
VITE_APP_DESCRIPTION="Production-grade analytics system for procurement data"

# Feature Flags
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_REAL_TIME=true
VITE_ENABLE_FILE_UPLOAD=true
VITE_ENABLE_NOTIFICATIONS=true

# File Upload Configuration
VITE_MAX_FILE_SIZE=52428800  # 50MB in bytes
VITE_ALLOWED_FILE_TYPES=".xlsx,.csv"
VITE_STORAGE_BUCKET="procurement-files"

# Analytics Configuration
VITE_ANALYTICS_TRACKING_ID=your_analytics_id
VITE_ENABLE_PERFORMANCE_MONITORING=true

# Development Configuration
VITE_DEBUG_MODE=false
VITE_LOG_LEVEL="info"  # debug, info, warn, error

# API Configuration
VITE_API_TIMEOUT=30000  # 30 seconds
VITE_RETRY_ATTEMPTS=3
VITE_RETRY_DELAY=1000   # 1 second

# Currency Configuration
VITE_DEFAULT_CURRENCY="USD"
VITE_DEFAULT_LOCALE="en-US"
VITE_CURRENCY_DECIMAL_PLACES=2

# Date Configuration
VITE_DATE_FORMAT="YYYY-MM-DD"
VITE_DATETIME_FORMAT="YYYY-MM-DD HH:mm:ss"
VITE_TIMEZONE="UTC"

# Pagination Configuration
VITE_DEFAULT_PAGE_SIZE=20
VITE_MAX_PAGE_SIZE=100

# Cache Configuration
VITE_CACHE_TTL=300000  # 5 minutes in milliseconds
VITE_ENABLE_OFFLINE_MODE=false

# Security Configuration
VITE_ENABLE_CSRF_PROTECTION=true
VITE_SESSION_TIMEOUT=3600000  # 1 hour in milliseconds

# Notification Configuration
VITE_ENABLE_PUSH_NOTIFICATIONS=false
VITE_NOTIFICATION_SOUND=true
VITE_AUTO_DISMISS_ALERTS=5000  # 5 seconds

# Export Configuration
VITE_ENABLE_PDF_EXPORT=true
VITE_ENABLE_CSV_EXPORT=true
VITE_EXPORT_FILENAME_PREFIX="procurement_export"

# Performance Configuration
VITE_ENABLE_LAZY_LOADING=true
VITE_ENABLE_VIRTUAL_SCROLLING=true
VITE_DEBOUNCE_DELAY=300  # milliseconds

# Error Handling
VITE_ENABLE_ERROR_BOUNDARY=true
VITE_ERROR_REPORTING_URL=your_error_reporting_url
VITE_ENABLE_CRASH_REPORTING=false

# Internationalization
VITE_DEFAULT_LANGUAGE="en"
VITE_SUPPORTED_LANGUAGES="en,fa"
VITE_ENABLE_RTL_SUPPORT=true

# Theme Configuration
VITE_DEFAULT_THEME="light"  # light, dark, system
VITE_ENABLE_THEME_SWITCHER=true

# Development Tools
VITE_ENABLE_DEVTOOLS=true
VITE_ENABLE_HOT_RELOAD=true
VITE_ENABLE_SOURCE_MAPS=true

# Testing Configuration
VITE_ENABLE_TEST_MODE=false
VITE_MOCK_API_RESPONSES=false
VITE_TEST_USER_EMAIL="test@example.com"

# Monitoring and Logging
VITE_ENABLE_CONSOLE_LOGGING=true
VITE_ENABLE_REMOTE_LOGGING=false
VITE_LOG_REMOTE_URL=your_logging_service_url

# Backup and Recovery
VITE_ENABLE_AUTO_BACKUP=false
VITE_BACKUP_INTERVAL=86400000  # 24 hours in milliseconds
VITE_BACKUP_RETENTION_DAYS=30

# Integration Configuration
VITE_ENABLE_EMAIL_INTEGRATION=false
VITE_SMTP_HOST=your_smtp_host
VITE_SMTP_PORT=587
VITE_SMTP_USER=your_smtp_user
VITE_SMTP_PASS=your_smtp_password

# Third-party Services
VITE_GOOGLE_ANALYTICS_ID=your_ga_id
VITE_SENTRY_DSN=your_sentry_dsn
VITE_MIXPANEL_TOKEN=your_mixpanel_token

# Custom Configuration
VITE_CUSTOM_API_BASE_URL=your_custom_api_url
VITE_CUSTOM_WEBHOOK_URL=your_webhook_url
VITE_CUSTOM_INTEGRATION_KEY=your_integration_key
